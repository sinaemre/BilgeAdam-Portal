@{
    ViewData["Title"] = "Index";
}
@model List<GetClassroomByTeacherVM>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sınıflar</h3>
            </div>
            <div class="card-body">
                <table class="display myTable nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Sınıf</th>
                            <th>Açıklama</th>
                            <th>Mevcut</th>
                            <th>Detay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var classroom in Model)
                        {
                            <tr>
                                <td>@classroom.Id</td>
                                <td>@classroom.ClassroomName</td>
                                <td>@classroom.ClassroomDescription</td>
                                <td>@classroom.ClassroomSize</td>
                                <td>
                                    <a class="btn btn-outline-success" asp-controller="Students" asp-action="GetStudentsByClassroomId" asp-route-id="@classroom.Id"><i class="fa-solid fa-circle-info"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
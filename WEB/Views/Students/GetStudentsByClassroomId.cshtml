@{
    ViewData["Title"] = "Index";
}
@model List<GetStudentsVM>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Öğrenciler</h3>
            </div>
            <div class="card-body">
                <table class="display myTable nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Öğrenci</th>
                            <th>Doğum Tarihi</th>
                            <th>1.Sınav</th>
                            <th>2.Sınav</th>
                            <th>Proje notu</th>
                            <th>Ortalama</th>
                            <th>Proje</th>
                            <th>Detay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.Id</td>
                                <td>@student.FullName</td>
                                <td>@student.BirthDate.ToShortDateString()</td>
                                <td>@student.Exam1</td>
                                <td>@student.Exam2</td>
                                <td>@student.ProjectExam</td>
                                <td>@student.Average</td>
                                <td>
                                    <a class="btn btn-outline-success" asp-action="Download" asp-route-filepath="@student.ProjectPath">
                                        <i class="fa-solid fa-download"></i>
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-outline-dark" asp-action="DetailStudent" asp-route-id="@student.Id">Detay</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Update Student";
}
@model UpdateStudentDTO
<section class="h-100 bg-dark">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0 d-flex justify-content-center align-items-center">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                 alt="Sample photo" class="img-fluid"
                                 style=" height:600px; width:700px;border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase d-block">Öğrenci Güncelle</h3>

                                <form asp-action="UpdateStudent" enctype="multipart/form-data">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="CreatedDate" />
                                    <input type="hidden" asp-for="UpdatedDate" />
                                    <input type="hidden" asp-for="AppUserID" />
                                    <input type="hidden" asp-for="ImagePath" />
                                    <div class=" my-2">
                                        <div class="d-flex justify-content-center mb-2">
                                            @if (Model.Image != null)
                                            {
                                                <img id="image" width="150" height="150" class="rounded-circle justify-content-center" src="~/studentsImages/@Model.ImagePath" />
                                            }
                                            else
                                            {
                                                <img id="image" width="150" height="150" class="rounded-circle justify-content-center" src="~/studentsImages/default.png" />
                                            }
                                        </div>
                                        <input id="uploadImage" class="form-control" asp-for="Image" />
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form3Example1m" asp-for="FirstName"></label>
                                                <input id="form3Example1m" asp-for="FirstName" class="form-control form-control-lg" />
                                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label asp-for="LastName" class="form-label" for="form3Example1n"></label>
                                                <input asp-for="LastName" id="form3Example1n" class="form-control form-control-lg" />
                                                <span asp-validation-for="LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label asp-for="Email" class="form-label" for="form3Example1m1"></label>
                                                <input asp-for="Email" id="form3Example1m1" class="form-control form-control-lg" />
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label asp-for="BirthDate" class="form-label" for="form3Example1n1"></label>
                                                <input asp-for="BirthDate" type="date" id="form3Example1n1" class="form-control form-control-lg" />
                                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label asp-for="ClassroomId" class="form-label" for="form3Example1n1"></label>
                                                <select asp-for="ClassroomId" class="form-control form-control-lg">
                                                    <option selected disabled value="0">Lütfen bir sınıf seçiniz!</option>
                                                    @foreach (var classroom in Model.Classrooms)
                                                    {
                                                        @if (Model.ClassroomId == classroom.Id)
                                                        {
                                                            <option selected value="@classroom.Id">@classroom.ClassroomName (@classroom.ClassroomDescription) - @classroom.TeacherName - (Sınıf Mevcudu: @classroom.ClassroomSize)</option>
                                                        }
                                                        else
                                                        {

                                                            <option value="@classroom.Id">@classroom.ClassroomName (@classroom.ClassroomDescription) - @classroom.TeacherName - (Sınıf Mevcudu: @classroom.ClassroomSize)</option>
                                                        }
                                                    }
                                                </select>
                                                <span asp-validation-for="ClassroomId" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="d-flex justify-content-end pt-3">
                                        <a asp-action="Index" data-mdb-button-init data-mdb-ripple-init class="btn btn-light btn-lg">Geri Dön</a>
                                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-warning btn-lg ms-2">Kaydet</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>